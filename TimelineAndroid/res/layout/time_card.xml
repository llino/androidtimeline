    <TextView
        android:id="@+id/tc_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:maxLines="4"
        android:text=" sd fsdf sdf adfs ahgtrst hdrhareda gwer gaer rsthgs trhshs" />
    
    <TextView
        android:id="@+id/tc_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Date" />

</LinearLayout>
